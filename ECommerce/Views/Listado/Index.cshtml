@model IList<ECommerce.Models.ProductoViewModel>
@{ 
    ViewBag.Title = "Productos";
}

@section styles{
    <!-- Custom styles for this template -->
    <link href="~/Content/shop-homepage.css" rel="stylesheet">
}
<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <h1 class="my-4">Categoria: @Model[0].IdCategoria </h1>
            </div>
            <div class="row">
                @for (var idx = 0; idx < Model.Count; idx++)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card h-100">
                            <a href="#"><img class="card-img-top" src="/imagenes/imagen/@Model[idx].IdImagen" alt=""></a>
                            <div class="card-body">
                                <div class="card-title">
                                    @Html.ActionLink(@Model[idx].Nombre, "Producto", "Producto", new { @Id = Model[idx].IdProducto }, new { @class = "btn btn-primary" })
                                </div>
                                <p class="card-text">@Model[idx].DescripcionBreve</p>
                                <h5>$@Model[idx].Precio</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>